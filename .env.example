# ============================================
# BOT CONTROL
# ============================================

# Master on/off switch for Bob bot
# Set to false to completely disable the bot
BOT_ENABLED=true

# Enable/disable card counting feature
# true = Bob uses card counting (52-55% win rate, aggressive betting)
# false = Bob uses basic optimal strategy (48% win rate, min bets only)
CARD_COUNTING_ENABLED=true

# Enable/disable learning system (opponent profiling, experience tracking)
# true = Bob learns from every session and improves over time
# false = Bob uses fixed strategy (no learning)
LEARNING_ENABLED=true

# ============================================
# PLATFORM CONFIGURATION
# ============================================

# Platform URL (no trailing slash)
PLATFORM_URL=https://j1blackjack.com

# Helius RPC endpoint
HELIUS_RPC_URL=https://api.devnet.solana.com

# Entry fee per session (SOL)
ENTRY_FEE_SOL=0.05

# Platform treasury wallet address
PLATFORM_WALLET=YourPlatformWalletAddressHere

# ============================================
# BOT WALLET
# ============================================

# Bot's Solana wallet private key
# Format: JSON array [1,2,3,...] from bob-wallet.json
# Or base58 encoded string
BOT_WALLET_PRIVATE_KEY=[...]

# ============================================
# POLLING INTERVALS
# ============================================

# How often to check lobby for sessions (milliseconds)
# Default: 60000 (60 seconds)
SESSION_POLL_INTERVAL_MS=60000

# How often to check game state when in active session (milliseconds)
# Default: 2000 (2 seconds)
GAME_STATE_POLL_INTERVAL_MS=2000

# ============================================
# BEHAVIOR SETTINGS
# ============================================

# Delay before taking action (appear human-like)
# Bot will wait random time between min and max
ACTION_DELAY_MIN_MS=1000
ACTION_DELAY_MAX_MS=3000

# ============================================
# BETTING STRATEGY (Card Counting)
# ============================================

# Minimum bet (chips)
MIN_BET=25

# Maximum bet (chips)
# Bob will bet up to this when count is very favorable
MAX_BET=100

# True count threshold to start increasing bets
# Default: 2 (start betting more when TC >= 2)
COUNT_THRESHOLD_BET_INCREASE=2

# ============================================
# LOGGING
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info
